<li class="message-item">
    <div class="message">
        <% if (user.isMember) { %>
        <span class="message-author">
            <%= message.author %>
        </span>
        <% } else { %>
        <span class="message-author blurred">
            Secret Identity
        </span>
        <% } %>
        <h3 class="message-title">
            <%= message.title %>
        </h3>
        <p class="message-content">
            <%= message.content %>
        </p>
        <% if (user.isMember) { %>
        <span class="message-date">
            <%= message.date %>
        </span>
        <% } else { %>
        <span class="message-date blurred">
            Not A, Real Date 00:00 AM
        </span>
        <% } %>
    </div>
    <% if (user.isAdmin) { %>
    <form action="/delete/<%= message.id %>" method="POST">
        <button type="submit" class="message-delete-btn">
            <img src="/trash.svg" alt="Trash delete icon">
        </button>
    </form>
    <% } %>
</li>