<div class="sidebar">
    <div class="user-info">
        <span>Logged in as:</span>
        <span class="user"><%= user.firstName + ' ' + user.lastName %></span>
    </div>
    <div class="privileges-list-container">
        <h4>Your Privileges</h4>
        <ul class="privileges-list">
            <% if (user.isAdmin) { %>
            <li class="privileges-list-item"><strong>Admin: </strong>Can delete messages.</li>
            <% } %>
            <% if (user.isMember) { %>
            <li class="privileges-list-item"><strong>Member: </strong>Can view message times and authors.</li>
            <% } %>
            <li class="privileges-list-item"><strong>User: </strong>Can send messages.</li> 
        </ul>
    </div>
    <ul class="sidebar-link-list">
        <li class="sidebar-link-list-item">
            <a href="/" class="sidebar-link">Home</a>
        </li>
        <li class="sidebar-link-list-item">
            <a href="/new-message" class="sidebar-link blue">New Message</a>
        </li>
        <div class="spacer"></div>
        <% if (!user.isMember) { %>
        <li class="sidebar-link-list-item">
            <a href="/join" class="sidebar-link">Join the Club</a>
        </li>
        <% } %>
        <li class="sidebar-link-list-item">
            <a href="/logout" class="sidebar-link">Logout</a>
        </li>
    </ul>
</div>